<%= form_for [:admin, instance_variable_get("@#{controller_name.singularize}")], :url => path, :html => {:multipart => true ,:id => 'form'} do |form| %>
  <div class="LeftNew">
    <div class="Inner">
      <%=render :partial => "/admin/shared/errors" ,:locals =>{:model => instance_variable_get("@#{controller_name.singularize}") }  %>
      <div class="AcceNew">

        <dl>
          <dt><%= controller_name.classify.constantize.human_attribute_name(:name) %></dt>
          <dd>
            <%= form.text_field   :name , :class => 'style1' %>
          </dd>
        </dl>
        <dl>
          <dt><%= controller_name.classify.constantize.human_attribute_name(:qq) %></dt>
          <dd>
         <%= form.text_field  :qq , :class => 'style1' %>
          </dd>
        </dl>

        <dl>
          <dt><%= controller_name.classify.constantize.human_attribute_name(:email) %></dt>
          <dd>
         <%= form.text_field  :email , :class => 'style1' %>
          </dd>
        </dl>
        <dl>
          <dt><%= controller_name.classify.constantize.human_attribute_name(:ip) %></dt>
          <dd>
         <%= form.text_field  :ip , :class => 'style1' %>
          </dd>
        </dl>

        <dl>
          <dt><%= controller_name.classify.constantize.human_attribute_name(:content) %></dt>
          <dd>
            <%= form.text_area   :content  %>
            <%#= form.cktext_area :content, :toolbar => 'Full' %>
          </dd>
        </dl>

                <dl>
          <dt><%= controller_name.classify.constantize.human_attribute_name(:is_check) %></dt>
          <dd>
         <%= form.check_box  :is_check  %>
          </dd>
        </dl>


      </div>
      <div class="PostBtn">
        <p>
          <%= form.submit t('labels.save')  , :class=>"btnW2_search" %>
        </p>
        <br class="clear" />
      </div>
    </div>
  </div>
<% end %>


